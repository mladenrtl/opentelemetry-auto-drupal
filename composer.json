{
    "name": "mladenrtl/opentelemetry-auto-drupal",
    "description": "OpenTelemetry auto-instrumentation for Drupal",
    "type": "library",
    "require": {
        "ext-opentelemetry": "*",
        "open-telemetry/api": "^1.0",
        "open-telemetry/sem-conv": "^1.23",
        "open-telemetry/sdk": "^1.0",
        "nyholm/psr7": "^1.8@dev",
        "symfony/http-kernel": "*",
        "symfony/http-client-contracts": "*"
    },
    "license": "Apache-2.0",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "OpenTelemetry\\Contrib\\Instrumentation\\Drupal\\": "src/",
            "OpenTelemetry\\Contrib\\Instrumentation\\Drupal\\Tests\\": "tests/"
        },
        "files": [
            "_register.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "2.0.x-dev",
        "open-telemetry/opentelemetry-propagation-traceresponse": "dev-main",
        "open-telemetry/opentelemetry-propagation-server-timing": "dev-main",
        "symfony/http-client": "^6.0",
        "php-http/mock-client": "1.x-dev",
        "symfony/messenger": "^6",
        "symfony/process": "^6",
        "guzzlehttp/guzzle": "^7.5",
        "symfony/routing": "^6",
        "open-telemetry/exporter-otlp": "^1"
    }
}
